%head
  %meta{ charset: 'utf-8' }
  %meta{ 'http-equiv' => 'X-UA-Compatible', 'content' => 'IE=edge,chrome=1' }

  %title= "#{defined?(title) ? title + ' | ' : ''}JP Transportation Safety Consulting, LLC (JPTSC)"

  - if defined?(meta_description)
    %meta{ name: 'description', content: "#{meta_description}" }

  %meta{ name: 'viewport', content: 'width=device-width' }

  / El Styles
  %link{ href: '/css/jptsc.css', rel: 'stylesheet', type: 'text/css', media: 'all' }
  /[if lt IE 8]
    %link{ href: '/css/ie8.css', rel: 'stylesheet', type: 'text/css', media: 'all' }

  / El Modernizr
  %script{ src: '/js/libs/modernizr-2.5.3-respond-1.1.0.min.js' }

%body
  <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
  .space_top
  #wrap.clearfix
    %header#header.clearfix
      .row
        .span2
          #logo
            %a{href: '/'}
        .span5
          %h2#logo-caption
            Keeping your fleet <span class="theme_color">safe</span>.

        #phone
          %ul
            %li.theme_color Call us:
            %li (205) 329-8182
        #socialmedia
          %ul
            <li><a href="https://plus.google.com/u/0/102370404281555515793/posts" target="_blank"><img src="/img/icons/google-plus.png" width="29" height="29" alt="Google"></a></li>
            <li><a href="https://twitter.com/#!/UnitedThemes" target="_blank"><img src="/img/icons/twitter-icon.png" width="29" height="29" alt="Twitter"></a></li>
            <li><a href="http://www.facebook.com/pages/United-Themes/192439650789254" target="_blank"><img src="/img/icons/facebook-icon.png" width="29" height="29" alt="Facebook"></a></li>

      #nav.clearfix.top
        - active_nav_link = nil if !defined?(active_nav_link)
        %ul.sf-menu.container
          %li{ class: "#{active_nav_link == :home ? 'current' : '' }" }
            %a{ href: '/', title: 'JPSTC website homepage' } Home
          %li{ class: "#{active_nav_link == :about ? 'current' : '' }" }
            %a{ href: '/about', title: 'About JPTSC' } About Us
          %li{ class: "#{active_nav_link == :services ? 'current' : '' }" }
            %a{ href: '/services', title: 'JPTSC Services' } Our Services
          %li{ class: "#{active_nav_link == :testimonials ? 'current' : '' }" }
            %a{ href: '/testimonials', title: 'What our clients say about us' } Testimonials
          %li{ class: "#{active_nav_link == :partners ? 'current' : '' }" }
            %a{ href: '/partners', title: 'JPTSC Partners' } Partners
          %li{ class: "#{active_nav_link == :contact ? 'current' : '' }" }
            %a{ href: '/contact', title: 'Contact JPTSC' } Contact Us

    %section#content
      = yield

    %footer#footer
      .container
        .row
          .span4
            %h5 Navigation
            %ul
              %li
                %a{href: '#'} Home
              %li
                %a{href: '#'} About Us
              %li
                %a{href: '#'} Staff
              %li
                %a{href: '#'} Contact Us
              %li
                %a{href: '#'} Mission Statement
              %li
                %a{href: '#'} Services
              %li
                %a{href: '#'} Links

          .span4
            %h5 Twitter
            #twitter

          .span4
            %h5 Contact Us
            %address
              %strong
                JP Transportation Safety Consulting, LLC.
              %br
              P.O. Box 382105
              %br
              Birmingham, AL 35238-2105

            %h6 Call Us
            %ul.unstyled
              %li (205) 329-8182
              %li (205) 329-8183


      #sub_footer
        .container
          .row
            .span6
              %p
                &copy; #{Date.today.year} JP Transportation Safety Consulting, LLC.
                All rights reserved.
              %p
                Made by <a href="http://www.rarestep.com">RareStep</a>.
            .span6.ar
              <span><a class="button" href="#top">Top &uarr;</a></span>
  .space_bottom

  = render_partial 'javascripts'
  = content_for(:javascript)